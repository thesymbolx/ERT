<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/app_nav_graph"
    app:startDestination="@id/fieldsFragment">

    <fragment
        android:id="@+id/fieldsFragment"
        android:name="com.example.technicaltaskert.FieldsFragment"
        android:label="fragment_fields"
        tools:layout="@layout/fragment_fields" >
        <action
            android:id="@+id/action_fieldsFragment_to_fieldDialog"
            app:destination="@id/fieldDialog" />
        <action
            android:id="@+id/action_fieldsFragment_to_timeDialog"
            app:destination="@id/timeDialog" />
    </fragment>

    <dialog
        android:id="@+id/fieldDialog"
        android:name="com.example.technicaltaskert.dialogs.FieldDialog"
        android:label="fragment_field_dialog"
        tools:layout="@layout/fragment_field_dialog" >
        <argument
            android:name="fieldType"
            app:argType="com.example.technicaltaskert.FieldsViewModel$FieldType"
            android:defaultValue="VALUE" />
    </dialog>
    <dialog
        android:id="@+id/timeDialog"
        android:name="com.example.technicaltaskert.dialogs.TimeDialog"
        android:label="TimeDialog" />
</navigation>